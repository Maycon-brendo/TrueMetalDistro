@page
@model TrueMetalAppWeb.Pages.CreateModel


<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Inclusão de Patch</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Patch.Nome" class="control-label"></label>
                <input asp-for="Patch.Nome" class="form-control" />
                <span asp-validation-for="Patch.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patch.Descricao" class="control-label"></label>
                <input asp-for="Patch.Descricao" class="form-control" />
                <span asp-validation-for="Patch.Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patch.ImagemUri" class="control-label"></label>
                <input asp-for="Patch.ImagemUri" class="form-control" />
                <span asp-validation-for="Patch.ImagemUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patch.Preco" class="control-label"></label>
                <input asp-for="Patch.Preco" class="form-control" />
                <span asp-validation-for="Patch.Preco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patch.DataCadastro" class="control-label"></label>
                <input asp-for="Patch.DataCadastro" class="form-control" />
                <span asp-validation-for="Patch.DataCadastro" class="text-danger"></span>
            </div>


            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="Patch.EntregaExpressa" />
                <label asp-for="Patch.EntregaExpressa"></label>
            </div>

            <div class="form-group mt-3 mb-3">
                <label asp-for="Patch.GeneroId" class="control-label"></label>
                <select class="form-select" asp-for="Patch.GeneroId"
                    asp-items="Model.PatchOptionItems">
                    <option value="">Selecione o genero da banda do patch</option>
                </select>
                <span asp-validation-for="Patch.GeneroId" class="text-danger">
                </span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
